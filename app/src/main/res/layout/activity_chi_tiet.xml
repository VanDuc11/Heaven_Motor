<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".fragment.ChiTietActivity"
    android:background="@android:drawable/divider_horizontal_bright"
    android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/imgXeChiTiet"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/place" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Mã xe : "
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:textColor="#070707"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tvMaXe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tên xe : "
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:textColor="#0E0E0E"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tvTenXe"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Loại xe :"
            android:layout_marginRight="10dp"
            android:textColor="#020202"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tvLoaiXe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Hãng xe :"
            android:layout_marginRight="10dp"
            android:textColor="#020202"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tvHangXe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Độ mới :"
            android:layout_marginRight="10dp"
            android:textColor="#020202"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tvTrangThai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Biển số :"
            android:layout_marginRight="10dp"
            android:textColor="#0F1010"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tvBKS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Dung tích :"
            android:layout_marginRight="10dp"
            android:textColor="#0F1010"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tvDungTich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tiền thuê :"
            android:layout_marginRight="10dp"
            android:textColor="#0F1010"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tvTienThue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Năm sản xuất :"
            android:layout_marginRight="10dp"
            android:textColor="#0F1010"
            android:textSize="20dp"/>
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tvNam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>

    </LinearLayout>


</LinearLayout>

