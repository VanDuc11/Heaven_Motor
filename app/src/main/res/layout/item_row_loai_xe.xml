<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bo_goc_custom2"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_row_tvMaLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/item_row_tvTenloai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="127dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_row_imgUpdate"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:src="@drawable/but_border_color_24" />

        <ImageView
            android:id="@+id/item_row_imgDelete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/delete_forever_24" />
    </LinearLayout>

</LinearLayout>