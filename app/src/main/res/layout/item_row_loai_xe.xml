<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/bo_goc_custom2"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_row_tvMaLoai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:text="MaLoai" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/coler_canh"
            >
        </LinearLayout>

        <TextView
            android:id="@+id/item_row_tvTenloai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:text="TenLoai" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_row_imgUpdate"
            android:layout_width="50dp"
            android:layout_height="50dp"
           android:src="@drawable/ic_baseline_edit_24" />
        <ImageView
            android:id="@+id/item_row_imgDelete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/delete_forever_24" />
    </LinearLayout>

</LinearLayout>