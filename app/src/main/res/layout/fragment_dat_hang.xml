<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bachgroud"

    tools:context=".fragment.DatHang_Fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"

        android:layout_weight="0"
        android:padding="10dp"
        >

        <EditText
            android:id="@+id/frag_datHang_edtuNgay"
            android:layout_width="132dp"
            android:layout_height="71dp"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="Từ ngày"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/frag_datHang_edDenngay"
            android:layout_width="95dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Đến ngày"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/frag_datHang_btn"
            android:layout_width="100dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:text="Search" />
    </LinearLayout>

    <GridView
        android:id="@+id/frag_datHang_grip"
        android:layout_width="match_parent"
        android:layout_height="607dp"
        android:layout_margin="5dp"
        android:layout_marginEnd="@dimen/cardview_compat_inset_shadow"
        android:numColumns="2" />

</LinearLayout>